#include <stdio.h>
#include <string.h>

int main()
{
    char str[50];
    int i = 0, flag = 0;

    printf("The grammar is: S -> aS | S b | ab\n");
    printf("Enter the string to be checked:\n");
    scanf("%s", str);

    // String must begin with 'a'
    if (str[0] != 'a')
    {
        printf("String not accepted\n");
        return 0;
    }

    // Scan the string
    for (i = 1; str[i] != '\0'; i++)
    {
        if (str[i] == 'a')
        {
            if (flag == 1)   // b already came, now 'a' â†’ invalid
            {
                printf("String not accepted\n");
                return 0;
            }
        }
        else if (str[i] == 'b')
        {
            flag = 1;  // b-block has started
        }
        else
        {
            printf("String not accepted\n");
            return 0;
        }
    }

    // Valid if it ends with at least one 'b'
    if (flag == 1)
        printf("String accepted\n");
    else
        printf("String not accepted\n");

    return 0;
}
