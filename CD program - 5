#include <stdio.h>
#include <ctype.h>

int main() {
    char id[20];
    int i = 1, flag = 1;

    printf("Enter an identifier: ");
    scanf("%s", id);

    // Rule 1: First character must be a letter or underscore
    if (!isalpha(id[0]) && id[0] != '_') {
        flag = 0;
    }

    // Rule 2: Remaining characters can be letters, digits, or underscore
    while (id[i] != '\0' && flag == 1) {
        if (!isalnum(id[i]) && id[i] != '_') {
            flag = 0;
        }
        i++;
    }

    // Result
    if (flag == 1)
        printf("Valid identifier\n");
    else
        printf("Not a valid identifier\n");

    return 0;
}
